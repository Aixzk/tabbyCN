div
    .tabby-logo
    h1.tabby-title Tabby
        sup α

    .list-group.mb-4
        a.list-group-item.list-group-item-action.d-flex(
            *ngFor='let button of getButtons(); trackBy: buttonsTrackBy',
            (click)='button.click()',
        )
            .d-flex.align-self-center([innerHTML]='sanitizeIcon(button.icon)')
            span {{button.title}}

footer.d-flex.align-items-center
    .btn-group.mr-auto
        button.btn.btn-dark((click)='homeBase.openGitHub()')
            i.fab.fa-github
            span GitHub
        button.btn.btn-dark((click)='homeBase.reportBug()')
            i.fas.fa-bug
            span 报告问题
        button.btn.btn-dark((click)='homeBase.openTabbyCN()')
            i.fab.fa-github
            span Tabby 中文版

    .form-control-static.selectable.no-drag 版本：{{homeBase.appVersion}}
